<Window x:Class="Jarvis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="513" Width="863"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Menu HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="3" FontSize="14" Height="40">
                <MenuItem Header="File" Height="35">
                    <MenuItem Header="Exit" HorizontalAlignment="Left"></MenuItem>
                </MenuItem>
                <MenuItem Header="Tools" Height="35">
                </MenuItem>
            </Menu>
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Grid.Row="1" Grid.Column="0">Employees</TextBlock>
            <materialDesign:ColorZone Mode="PrimaryLight" Grid.Row="2" Grid.Column="0" CornerRadius="4" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <ListBox>
                    <ListItem></ListItem>
                </ListBox>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>
